@model ShopBanDoDienTu_Nhom1.ViewModel.UserProfileVM
@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
}

<h2>Chỉnh sửa thông tin cá nhân</h2>

@using (Html.BeginForm("EditUserProfile", "Account", new { area = "Manager" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", @type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Mobile)
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @id = "addressTextarea" })
    </div>

    <div>
        <button type="submit" class="btn btn-warning mt-3">Lưu</button>
    </div>

}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/CKEditor/ckeditor.js"></script>
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('addressTextarea', {
                height: 200 // Chiều cao của CKEditor
            });
        });
    </script>
}


