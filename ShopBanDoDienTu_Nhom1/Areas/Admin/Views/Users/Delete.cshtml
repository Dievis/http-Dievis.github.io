@model ShopBanDoDienTu_Nhom1.ViewModel.UserProfileVM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/ManagerLayoutPage.cshtml";
}

<h2>Xóa tài khoản - Shop nhóm 1</h2>

@using (Html.BeginForm("DeleteConfirm", "Users", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/dorm-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-10">
            <p>Bạn có chắc muốn xóa Tài Khoản này?</p>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Username)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <!-- Display other fields for Email, City, Birthday, Address, PhoneNumber -->
            </dl>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}