@model IEnumerable<ShopBanDoDienTu_Nhom1.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Loại mặt hàng - Shop nhóm 1</h2>

<p>
    <a class="btn btn-success" href="/admin/categories/create">Thêm</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CategoryId, controller = "Categories", area = "Admin" }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryId, controller = "Categories", area = "Admin" }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
