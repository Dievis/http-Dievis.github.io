@model ShopBanDoDienTu_Nhom1.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa loại mặt hàng - Shop nhóm 1</h2>

<h3>Bạn có chắc muốn xóa ?</h3>
<div>
    <hr class="bold-hr"/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Categories", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                <a class="btn btn-info" href="/admin/categories">Hủy bỏ</a>
            </div>
        </div>
    }
</div>
