@model ShopBanDoDienTu_Nhom1.Models.Product

@{
    ViewBag.Title = "Detail";
}

<h2 class="text-center">Thông tin mặt hàng - Shop nhóm 1</h2>

<div class="card mx-auto mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Url.Content(Model.Img)" alt="Hình ảnh sản phẩm" class="card-img" style=" height: 200px; object-fit: cover">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.ProductName)</h5>
                <p class="card-text">Thương hiệu: @Html.DisplayFor(model => model.Brand.BrandName)</p>
                <p class="card-text">Loại mặt hàng: @Html.DisplayFor(model => model.Category.CategoryName)</p>
                <p class="card-text">Giá: @Html.DisplayFor(model => model.Price)</p>
                <p class="card-text">Ngày nhập hàng: @Html.DisplayFor(model => model.DateOfPurchase)</p>
                <p class="card-text">Tình trạng sẵn có: @Html.DisplayFor(model => model.AvailabilityStatus)</p>
                <p class="card-text">Hoạt động: @Html.DisplayFor(model => model.Active)</p>
                <p class="card-text text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId, controller = "Products", area = "Admin" }, new { @class = "btn btn-warning" }) |
                    <a class="btn btn-warning" href="/admin/products">Quay lại</a>
                </p>
            </div>
        </div>
    </div>
</div>
