@model ShopBanDoDienTu_Nhom1.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2 class="text-center">Xóa mặt hàng - Shop nhóm 1</h2>

<div class="card mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <p class="card-text">Bạn có chắc chắn muốn xóa sản phẩm này?</p>
        <table class="table">
            <tr>
                <th>Tên mặt hàng</th>
                <td>@Model.ProductName</td>
            </tr>
            <tr>
                <th>Giá</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Ảnh sản phẩm</th>
                <td><img src="@Url.Content(Model.Img)" alt="Hình ảnh sản phẩm" class="card-img" style="max-width: 200px;"></td>
            </tr>
            <!-- Thêm các trường khác nếu cần -->
        </table>

        @using (Html.BeginForm("DeleteConfirmed", "Products", new { id = Model.ProductId, controller = "Products", area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    <a class="btn btn-info" href="/admin/products">Hủy bỏ</a>
                </div>
            </div>
        }
    </div>
</div>
